--[[pod_format="raw",created="2024-09-16 14:49:55",modified="2024-09-17 12:45:41",revision=276]]
function _init()
	player={}
		--particles
		player.particles={}
		player.trail={}
		--variables
		player.x = 30
		player.y = 30
		player.speed = 3
		player.friction = 1.05
		player.dx = 0
		player.dy = 0
		player.r = 3
		--methods
		player.update = function(self)
			--movement
			self.x += self.dx
			self.y += self.dy
			
			if btn(0) then self.dx = -self.speed end
			if btn(1) then self.dx =  self.speed end
			if btn(2) then self.dy = -self.speed end
			if btn(3) then self.dy =  self.speed end
			
			if (abs(self.dx) > 0 and (not btn(0) and not btn(1))) then
				self.dx /= self.friction
				if abs(self.dx) < 0.1 then self.dx = 0 end
			end
			if (abs(self.dy) > 0 and (not btn(2) and not btn(3))) then
				self.dy /= self.friction
				if abs(self.dy) < 0.1 then self.dy = 0 end
			end
			--flame particles
			for I=1,5 do
				add(self.particles,{
					x=self.x+rnd(15),
					y=self.y+rnd(10),
					r=rnd(4),
					c=10,
					life=20
				})
			end
			for p in all(self.particles) do
				p.y-=1+rnd(2)
				p.life-=1
				if p.life<0 then del(self.particles,p) end
				if p.life<(10) then 
					p.r=rnd(2) 
					p.c=9
				end
			end
			
			--scorched trail
				for I=1,5 do
					add(self.trail,{
						x=self.x+8,
						y=self.y+12,
						r=4+rnd(2),
						life=300
					})
				end
				for t in all(self.trail) do
					t.life-=rnd(3)
					if t.life<(t.life/2) then t.r-=1 end
					if t.life<0 then del(self.trail,t) end
				end
			end
			
		player.draw = function(self)
			for t in all(self.trail) do
				circfill(t.x, t.y, t.r, 21)
			end
			spr(1,self.x,self.y)
			for p in all(self.particles) do
				circfill(p.x, p.y, p.r, p.c)
			end		
		end	
end

function _update()
	player:update()
end

function _draw()
	cls(3)	
	player:draw()
	--print(max(abs(player.dx),abs(player.dy)), player.x+10, player.y+10, 7)
end
